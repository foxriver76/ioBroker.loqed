{
  "name": "iobroker.loqed",
  "version": "0.3.1",
  "description": "Control LOQED smart locks",
  "engines": {
    "node": ">=16.0.0"
  },
  "author": {
    "name": "foxriver76",
    "email": "moritz.heusinger@gmail.com"
  },
  "homepage": "https://github.com/foxriver76/ioBroker.loqed",
  "license": "MIT",
  "keywords": [
    "LOQED",
    "smart lock",
    "alarm"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:foxriver76/ioBroker.loqed.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.3",
    "loqed-api": "^2.0.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@iobroker/adapter-dev": "^1.0.1",
    "@iobroker/testing": "^4.1.0",
    "@tsconfig/node14": "^1.0.3",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.28",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script -p iobroker"
  },
  "bugs": {
    "url": "https://github.com/foxriver76/ioBroker.loqed/issues"
  },
  "readmeFilename": "README.md"
